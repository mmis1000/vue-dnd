{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "paths": {
      "@mmis1000/vue-dnd": ["../src/packages/vue-dnd/index.ts"],
      "@mmis1000/vue-dnd/*": ["../src/packages/vue-dnd/*"]
    },
    "rootDirs": [
      "src",
      "../src/packages/vue-dnd"
    ],
    "outDir": "/dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/.vuepress/**/*.ts",
    "src/.vuepress/**/*.vue",
    "../src/packages/vue-dnd/**/*.ts",
    "../src/packages/vue-dnd/**/*.tsx"
  ],
  "references": [
    {
      "path": "../"
    }
  ]
}
